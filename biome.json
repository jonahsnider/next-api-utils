{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": ["dist", "node_modules", "temp", "docs", "coverage"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120,
		"ignore": ["package.json"]
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"globals": ["React"]
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"style": {
				"noParameterProperties": "off"
			},
			"suspicious": {
				"noEmptyBlockStatements": "off"
			},
			"correctness": {
				"noNodejsModules": "off"
			}
		}
	}
}
