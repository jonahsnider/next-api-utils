{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"formatter": {
		"lineWidth": 120
	},
	"files": {
		"ignore": ["dist", "node_modules", "temp"]
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"style": {
				"noParameterProperties": "off"
			},
			"correctness": {
				"noUnusedVariables": "off"
			}
		}
	}
}
