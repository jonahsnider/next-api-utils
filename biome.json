{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"files": {
		"includes": ["**", "!**/dist", "!**/node_modules", "!**/temp", "!**/docs", "!**/coverage"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120,
		"includes": ["**", "!**/package.json"]
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"globals": ["React"]
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"style": {
				"noParameterProperties": "off"
			},
			"suspicious": {
				"noEmptyBlockStatements": "off"
			},
			"correctness": {
				"noNodejsModules": "off"
			}
		}
	}
}
