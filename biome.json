{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"ignore": ["dist", "node_modules", "temp", "docs", "coverage"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"globals": ["React"]
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"nursery": {
				"all": true,
				"noEmptyBlockStatements": "off",
				"noNodejsModules": "off"
			},
			"style": {
				"all": true,
				"noParameterProperties": "off"
			}
		}
	}
}
