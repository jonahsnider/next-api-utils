{
	"name": "@jonahsnider/nextjs-api-utils",
	"version": "1.0.4",
	"description": "Utilities for building maintainable backend APIs for the Next.js app router.",
	"keywords": [
		"api",
		"next",
		"nextjs"
	],
	"bugs": {
		"url": "https://github.com/jonahsnider/nextjs-api-utils/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jonahsnider/nextjs-api-utils.git"
	},
	"license": "Apache-2.0",
	"author": {
		"name": "Jonah Snider",
		"email": "jonah@jonahsnider.com",
		"url": "https://jonahsnider.com"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js"
		},
		"./client": {
			"types": "./dist/client.d.ts",
			"import": "./dist/client.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rm -rf dist && tsc",
		"docs": "typedoc",
		"lint": "biome check .",
		"lint:fix": "biome check . --apply-unsafe",
		"test": "vitest --run --no-isolate",
		"test:coverage": "vitest --run --no-isolate --coverage",
		"validate-api": "api-extractor run",
		"validate-api:local": "api-extractor run --local --verbose"
	},
	"prettier": "@jonahsnider/prettier-config",
	"dependencies": {
		"@jonahsnider/util": "10.1.0",
		"yn": "5.0.0",
		"zod": "^3.22.2",
		"zod-validation-error": "^1.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.0.0",
		"@jonahsnider/prettier-config": "1.1.2",
		"@microsoft/api-extractor": "7.36.4",
		"@tsconfig/node18": "18.2.1",
		"@tsconfig/strictest": "2.0.2",
		"@types/node": "18.17.14",
		"@vitest/coverage-v8": "0.34.3",
		"@vitest/ui": "0.34.3",
		"next": "13.4.19",
		"prettier": "3.0.3",
		"typedoc": "0.25.1",
		"typescript": "5.2.2",
		"vitest": "0.34.3"
	},
	"peerDependencies": {
		"next": "^13"
	},
	"peerDependenciesMeta": {
		"next": {
			"optional": false
		}
	},
	"packageManager": "yarn@3.6.3",
	"publishConfig": {
		"access": "public"
	}
}
